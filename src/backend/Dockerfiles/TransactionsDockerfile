# Use the python3.8 container image
FROM python:3.8-alpine

# Set the working directory to /src
WORKDIR /src

# Copy the current directory contents into the container at /src
ADD ./services/transaction-api ./transaction-api
ADD ./shared ./shared

#change working directory
WORKDIR ./transaction-api

# Install the dependencies within container
RUN apk add --no-cache libffi-dev gcc musl-dev make
RUN pip install -r requirements.txt

ENV FLASK_APP run.py
ENV FLASK_RUN_HOST 0.0.0.0
ENV SERVICE_IN_DOCKER=True

EXPOSE 5000
# start the flask server
CMD ["flask", "run"]